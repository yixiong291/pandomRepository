<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyMMdd HH:mm:ss}|%p|%m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <root level="info">
            <AppenderRef ref="Console" />
        </root>
    </Loggers>
</Configuration>